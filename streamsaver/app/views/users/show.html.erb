<h3>Main Menu</h3>
<ul>
<%=link_to "Add to Your Favorites", user_plan_path%>
<%=link_to "Add New Show", new_show_path%>
<%=link_to "Log Out", logout_path%>
</ul>

<div style="background-color:black;color:white;font-family:courier;">
<h1>Welcome, <%= @user.first_name %></h1>

<% @user.shows_by_provider.each do |provider, shows|%>
    <h2 style="background-color:teal;"> <%= provider %> </h2>
    <ul>
    <% shows.each do |show| %>
        <li style="display:inline;"> <%=show.name %>
        <img src=<%=show.image_url%> width="300" height="200"></li>
    <% end %>
    </ul>
    <br><br>
<% end %>
</div>
