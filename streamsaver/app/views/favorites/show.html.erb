<div class="text-center mb-2 p-3" >
    <h1> <%= @show.name%> </h1>
    <h3> Streams on <%= @show.provider.name %> </h3>
    <div class="form-row">
        <div class="col-md-5 mb-3"><img src=<%=@show.image_url%> width="400" height="300"></div>
        <div class="col-md-5 mb-5 text-center"><%= @show.description %> </div>
    </div>
    
    <div class="text-center mb-2 p-5">
        <%=form_tag(favorites_path(@favorite), method: :delete) do  %>
            <%= submit_tag "Remove from favorites"%>
        <%end%>
    </div>
  </div>